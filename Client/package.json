{
	"name": "client",
	"type": "module",
	"scripts": {
		"wbuild": "tsc --noEmit && webpack # using webpack",
		"rebuild": "cmd /c 'del /Q 2>NUL dist && webpack'",
		"watch": "webpack --watch",
		"dev": "bunx --bun vite",
		"devhost": "bunx --bun vite --host",
		"devhttps": "cross-env USE_HTTPS=true npx vite",
		"devhttpshost": "cross-env USE_HTTPS=true npx vite --host",
		"_build": "vite build # do not used since not working with CSR",
		"build": "bun run wbuild # build with webpack for CSR",
		"preview": "vite preview",
		"doc": "typedoc && cmd /c \"start docs/index.html\"",
		"test": "bunx playwright test",
		"cov": "cross-env USE_COVERAGE=true bunx playwright test && cmd /c \"start coverage-reports/index.html\"",
		"testui": "bunx playwright test --ui",
		"testdebug": "bunx playwright test --debug",
		"testhtml": "cross-env USE_HTML=true bunx playwright test",
		"testcsr": "cross-env USE_CSR=true bunx playwright test",
		"codegen": "bunx playwright codegen",
		"lint": "eslint --ext .ts,tsx --ignore-path .gitignore .",
		"lintfix": "eslint --ext .ts,tsx --ignore-path .gitignore --fix ."
	},
	"devDependencies": {
		"@playwright/test": "1.47.0",
		"@svgr/webpack": "8.1.0",
		"@types/bun": "1.1.9",
		"@types/dom-view-transitions": "1.0.5",
		"@types/node": "22.5.4",
		"@typescript-eslint/eslint-plugin": "8.5.0",
		"@zamiell/typedoc-plugin-not-exported": "0.3.0",
		"cross-env": "7.0.3",
		"css-loader": "7.1.2",
		"eslint": "8.57.0",
		"eslint-config-preact": "1.4.0",
		"file-loader": "6.2.0",
		"jest": "29.7.0",
		"monocart-coverage-reports": "2.10.3",
		"monocart-reporter": "2.8.0",
		"style-loader": "4.0.0",
		"ts-loader": "9.5.1",
		"tslib": "2.7.0",
		"vite-plugin-mkcert": "1.17.6",
		"webpack-cli": "5.1.4"
	},
	"dependencies": {
		"@elysiajs/eden": "1.1.3",
		"@mantine/core": "7.12.2",
		"@mantine/hooks": "7.12.2",
		"@preact/preset-vite": "2.9.0",
		"@preact/signals": "1.3.0",
		"@sinclair/typebox": "0.33.9",
		"clsx": "2.1.1",
		"elysia": "1.1.12",
		"lucide-react": "0.439.0",
		"preact": "10.23.2",
		"react-error-boundary": "4.0.13",
		"react-hot-toast": "2.4.1",
		"react-icons": "5.3.0"
	},
	"eslintConfig": {
		"extends": "preact"
	}
}
